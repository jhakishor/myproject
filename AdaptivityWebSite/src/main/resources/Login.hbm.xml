<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="true" default-lazy="false">

<class 
    name="com.adaptivity.blueprint4it.dao.hibernate.Login" 
    table="login">

    <id
        name="id"
        type="java.lang.Integer"
        column="id">
        
    <generator class="increment" />
    </id>

    <property
        name="companyName"
        type="java.lang.String"
        column="companyName"
        not-null="true"
        unique="true"
        length="128"
    />
    <property
        name="firstName"
        type="java.lang.String"
        column="firstName"
        not-null="true"
        unique="true"
        length="128"
    />
    <property
        name="lastName"
        type="java.lang.String"
        column="lastName"
        not-null="true"
        length="128"
    />
     <property
        name="companyTitle"
        type="java.lang.String"
        column="companyTitle"
        not-null="true"
        length="128"
    />
    
    <property
        name="email"
        type="java.lang.String"
        column="email"
        not-null="true"
        unique="true"
        length="30"
    />
    <property
        name="password"
        type="java.lang.String"
        column="password"
        not-null="true"
        length="128"
    />    
  <property
        name="phno"
        type="java.lang.String"
        column="phno"
        not-null="true"
        length="128"
    /> 
	<property
        name="promoCode"
        type="java.lang.String"
        column="promoCode"
        length="15"
    />  
    <property
        name="registrationStatus"
        type="java.lang.Integer"
        column="registrationStatus"
        not-null="true"
        length="128"
    />  
    <property
        name="activationKey"
        type="java.lang.String"
        column="activationKey"
        length="128"
    />  
</class>
</hibernate-mapping>
